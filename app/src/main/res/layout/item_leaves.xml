<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_weekly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.ProjectActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/leavescard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">


            <TextView
                android:id="@+id/tvType"
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:layout_toLeftOf="@+id/tvStatus"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="remove_old_taps" />
            <TextView
                android:id="@+id/tvStatus"
                style="@style/font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/_10sdp"
               />

            <TextView
                android:id="@+id/tvDetails"
                style="@style/font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvType"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/tvStatus"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/black"
                android:text="" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDetails"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvFromeDate"
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_9sdp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:text="from_date" />
                <TextView
                    android:id="@+id/tvToDate"
                    style="@style/font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_9sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:text="to_date" />
            </RelativeLayout>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>