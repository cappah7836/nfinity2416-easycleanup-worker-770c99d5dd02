<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <EditText
        android:id="@+id/current_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:hint="Huidig ​​wachtwoord"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/password_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hidepassc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hide"
        app:layout_constraintBottom_toBottomOf="@+id/current_password"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/current_password"
        app:layout_constraintTop_toTopOf="@+id/current_password"
        app:tint="@color/colorPrimary" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:hint="Nieuw wachtwoord"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/password_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_password" />
    <ImageView
        android:id="@+id/hidepassnp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hide"
        app:layout_constraintBottom_toBottomOf="@+id/new_password"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/new_password"
        app:layout_constraintTop_toTopOf="@+id/new_password"
        app:tint="@color/colorPrimary" />
    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:hint="Bevestigen wachtwoord"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/password_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_password" />
    <ImageView
        android:id="@+id/hidepasscp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hide"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_password"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/confirm_password"
        app:layout_constraintTop_toTopOf="@+id/confirm_password"
        app:tint="@color/colorPrimary" />
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:hint="Gebruik minimaal 6 tekens om een ​​wachtwoord aan te maken. Probeer het een beetje moeilijk te maken"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/_10sdp"
        android:background="@drawable/message_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_password" />

    <TextView
        android:id="@+id/update"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        android:text="Update"
        android:background="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/cancel_action"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toStartOf="@id/update"
        app:layout_constraintTop_toTopOf="@id/update"
        app:layout_constraintBottom_toBottomOf="@id/update"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/red"
        android:text="Annuleren"
        android:background="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        />





</androidx.constraintlayout.widget.ConstraintLayout>