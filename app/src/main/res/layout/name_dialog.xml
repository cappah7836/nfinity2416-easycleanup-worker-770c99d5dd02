<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:text="Werk je naam bij"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:hint="Vul uw volledige naam in"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/password_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />




    <TextView
        android:id="@+id/update"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        android:text="Update"
        android:background="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/cancel_action"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toStartOf="@id/update"
        app:layout_constraintTop_toTopOf="@id/update"
        app:layout_constraintBottom_toBottomOf="@id/update"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/red"
        android:text="Annuleren"
        android:background="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        />





</androidx.constraintlayout.widget.ConstraintLayout>