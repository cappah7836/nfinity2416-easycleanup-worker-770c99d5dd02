<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_titiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:hint="Enter your remarks..."
            android:gravity="top"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/bg_edit_text"></EditText>
<RadioGroup
    android:id="@+id/rgOption"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:weightSum="2">
    <RadioButton
        android:id="@+id/rbApprove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="true"
        android:text="APPROVE"></RadioButton>
    <RadioButton
        android:id="@+id/rbDecline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="DECLINE"></RadioButton>
</RadioGroup>

        <Button
            android:id="@+id/btSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/font"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_15sdp"
            android:drawableLeft="@drawable/ic_leaves"
            android:background="@drawable/bg_login_button"></Button>
    </LinearLayout>


    <TextView
        android:id="@+id/title"
        style="@style/font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_16sdp"
        android:text="REMARKS"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/title"
        android:background="@color/colorPrimary" />




</RelativeLayout>